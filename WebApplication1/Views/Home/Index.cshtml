
@model WebApplication1.Models.User

@{
    ViewBag.Title = "Home Page";

}

@section BodyClass {
    mainPage
}


    <div class="row">
        <div class="col-xs-6">
            <div class="container mycontainer">
                <h1>Welcome to Guest book</h1>
                <p class="lead">
                    Connect with your friends — and other fascinating people.
                    Get in-the-moment updates on the things that interest you.
                    And watch events unfold, in real time, from every angle.
                </p>
            </div>
        </div>
        <div class="col-xs-4 col-xs-4 formcontainer">

            <div class="row">
                @using (Html.BeginForm("LogIn", "Users", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <!--@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })-->
                            <div class="col-xs-11 col-md-11 ">
                                @Html.EditorFor(model => model.Name, 
                               new{
                                       htmlAttributes = new
                                       {
                                           @class = "form-control mylogin",
                                           @placeholder = "Phone, email or username"
                                       }
                                   })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-8 col-md-8 ">
                                @Html.EditorFor(model => model.Pasword, 
                               new{
                                   htmlAttributes = new
                                   {
                                       @class = "form-control mypassw",
                                       @type = "password",
                                       @placeholder = "password"
                                   }
                               })
                                @Html.ValidationMessageFor(model => model.Pasword, "", new { @class = "text-danger" })
                            </div>
                            <!--col-md-offset-2 -->
                            <div class="col-xs-2 col-md-2 ">
                                <input type="submit" value="Log in" class="btn btn-default mybtn" />
                            </div>
                        </div>

                        <div class="form-group">

                        </div>
                    </div>
                }
            </div>
        </div>


        <div class="col-xs-4 col-md-4 formcontainer">

            <div class="row">
                @using (Html.BeginForm("CheckIn", "Users", FormMethod.Post))
            {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4> New to Guest book? Sign up</h4>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <!--@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })-->
                            <div class="col-xs-11 col-md-11 ">
                                @Html.EditorFor(model => model.Name, 
                               new{
                                   htmlAttributes = new
                                   {
                                       @class = "form-control mylogin",
                                       @placeholder = "Phone, email or username"
                                   }
                               })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <!--@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })-->
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-xs-11 col-md-11 ">

                            @Html.EditorFor(model => model.Pasword,
                           new { htmlAttributes =
                               new {
                                    @class = "form-control mypassw",
                                    @type = "password",
                                    @placeholder = "password"
                                }
                           })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <!--@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })-->
                           @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-xs-11 col-md-11 ">

                            @Html.EditorFor(model => model.Pasword,
                           new { htmlAttributes =
                               new {
                                   @class = "form-control mypassw",
                                   @type="password",
                                   @placeholder = "repeat password"
                               }
                           })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-10 col-md-10 ">
                                <input type="submit" value="Sugn up for Guest book" class="btn btn-default mybtn-sugnup" />
                            </div>
                        </div>

                        
                    </div>
                }
            </div>
        </div>

    </div>


